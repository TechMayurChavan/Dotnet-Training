@model IEnumerable<Sample_Web_App.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeptNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeptNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeptName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                <!-- the html helper method
                    parameter 1: Link name
                    parameter 2: Action method that will be invoked with httpGet request
                    parameter 3: anonymous tyoe , that represents a route value aka parameters to be passed
                    to action method
                -->

                @Html.ActionLink("Edit", "Edit", new {id=item.DeptNo }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.DeptNo })
            </td>
        </tr>
}
    </tbody>
</table>
